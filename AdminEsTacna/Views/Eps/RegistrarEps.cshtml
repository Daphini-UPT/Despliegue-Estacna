@model AdminEsTacna.Models.Ep
@{
    ViewData["Title"] = "Registrar EPS";
    List<AdminEsTacna.Models.Ep> eps = ViewBag.Eps;
}
<div class=" row justify-content-center">
    <div class="col-lg-6">
        <h1 class="text-center fw-bold mb-4" style="color:#287D97">Registrar EPS</h1>
        <form asp-action="RegistrarEps">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label" style="color:#287D97"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="text-center form-group gap-2">
                <input type="submit" value="Registrar" class="btn btn-login" />
            </div>
        </form>
    </div>
</div>
